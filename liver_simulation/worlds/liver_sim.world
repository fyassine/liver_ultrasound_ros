<?xml version="1.0" ?>
<!--
  Liver Simulation World for Gazebo
  Object definitions should match the canonical source in: config/scene_objects.yaml
  Any changes to objects should be reflected in both files for Gazebo and MoveIt!
-->
<sdf version="1.6">
  <world name="default">
    <!-- A global light source -->
    <include>
      <uri>model://sun</uri>
    </include>
    <!-- A ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- A simple model for the patient bed -->
    <model name="patient_bed">
      <static>true</static>
      <pose>1.0 0.05 0.3 0 0 0</pose> <!-- Smaller and closer to the robot table -->
      <link name="link">
        <visual name="visual">
          <geometry>
            <box><size>1.5 0.6 0.6</size></box>
          </geometry>
          <material>
            <script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/Grey</name></script>
          </material>
        </visual>
        <collision name="collision">
          <geometry><box><size>1.5 0.6 0.6</size></box></geometry>
        </collision>
      </link>
    </model>

        <!-- A table for the iiwa robot -->
    <model name="robot_table">
      <static>true</static>
      <pose>1.0 -0.5 0.25 0 0 0</pose> <!-- Smaller table, closer to the bed -->
      <link name="link">
        <visual name="visual">
          <geometry>
            <box><size>0.5 0.5 0.5</size></box>
          </geometry>
          <material>
            <script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/DarkGrey</name></script>
          </material>
        </visual>
        <collision name="collision">
          <geometry><box><size>0.5 0.5 0.5</size></box></geometry>
        </collision>
      </link>
    </model>

    <!-- A simple model for the liver phantom -->
    <model name="liver_phantom">
      <static>true</static>
      <pose>0.7 0 0.85 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box><size>0.3 0.4 0.1</size></box>
          </geometry>
          <material>
            <ambient>0.8 0.2 0.2 1</ambient>
            <diffuse>0.8 0.2 0.2 1</diffuse>
            <specular>0.1 0.1 0.1 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry><box><size>0.3 0.4 0.1</size></box></geometry>
        </collision>
      </link>
    </model>
  </world>
</sdf>