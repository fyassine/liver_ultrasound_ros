<?xml version="1.0"?>
<launch>
  
  <!-- This launch file loads the URDF with the ultrasound probe into the ROS Parameter Server -->
  <arg name="hardware_interface" default="PositionJointInterface"/> 
  <arg name="robot_name" default="iiwa"/>
  
  <param name="robot_description" command="$(find xacro)/xacro '$(find ultrasound_probe_description)/urdf/ultrasound_probe.urdf.xacro' hardware_interface:=$(arg hardware_interface) robot_name:=$(arg robot_name)" />
  
  <param name="$(arg robot_name)/probe_length" value="0.24" />
  
</launch>
